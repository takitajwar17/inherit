# ================================================
# Inherit - Environment Variables
# ================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!
# ================================================

# ================================================
# CLERK AUTHENTICATION
# ================================================
# Get these from: https://dashboard.clerk.dev/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here
WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Clerk Redirect URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# ================================================
# DATABASE (MongoDB)
# ================================================
# Get connection string from: https://cloud.mongodb.com/
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# ================================================
# AI SERVICES (Groq)
# ================================================
# Get API key from: https://console.groq.com/
GROQ_API_KEY=gsk_your_groq_api_key_here

# ================================================
# APPLICATION URLs
# ================================================
NEXT_PUBLIC_SOCKET_SERVER_URL=http://localhost:3000
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000

# ================================================
# YOUTUBE API
# ================================================
# Get API key from: https://console.developers.google.com/
# You can add multiple keys separated by commas for rotation
NEXT_PUBLIC_YOUTUBE_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXX

# ================================================
# PUSHER (Real-time Features)
# ================================================
# Get these from: https://dashboard.pusher.com/
PUSHER_APP_ID=your_app_id
PUSHER_SECRET=your_pusher_secret
NEXT_PUBLIC_PUSHER_KEY=your_pusher_key
NEXT_PUBLIC_PUSHER_CLUSTER=ap2

# ================================================
# ADMIN AUTHENTICATION
# ================================================
# Generate secure credentials using:
#   node scripts/generate-admin-hash.js 'YourSecurePassword!'
#
# IMPORTANT: The password hash contains $ characters which must be
# escaped with backslashes in .env files:
#   \$2b\$12\$xxxxx...
# ================================================
ADMIN_USERNAME=admin
# Generate hash with: node scripts/generate-admin-hash.js 'YourPassword'
# Then escape the $ characters: $2b$12$... becomes \$2b\$12\$...
ADMIN_PASSWORD_HASH=\$2b\$12\$your_bcrypt_hash_here
ADMIN_JWT_SECRET=your_64_byte_hex_secret_here_generate_with_the_script

# ================================================
# LOGGING
# ================================================
# Log level: error, warn, info, http, debug
# Default: 'debug' in development, 'info' in production
LOG_LEVEL=info
